<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorTextIcon</item>
        <item name="colorAccent">@color/colorBackground</item>
        <item name="fontFamily">@font/quicksand_light</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="dialogTheme">@style/DialogStyle</item>
        <item name="dialogLayout">@drawable/dialog_card</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">20dp</item>
        <item name="android:dialogLayout">@layout/dialog</item>


    </style>


    <style name="EditText" parent="@style/Preference.DialogPreference.EditTextPreference">
        <item name="android:colorEdgeEffect">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="MediumText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SmallCalendarText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NavigationDrawerStyle">

        <item name="android:textSize">20sp</item><!-- text size in menu-->
        <item name="android:textStyle">bold</item>

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">80dp</item>
        <item name="listPreferredItemHeightSmall">80dp</item>
        <item name="listPreferredItemHeightLarge">80dp</item>
        <item name="android:rowHeight">20dp</item>
        <item name="itemIconSize">50dp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">18dp</item>
        <item name="listPreferredItemPaddingLeft">18dp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">18dp</item>
        <item name="listPreferredItemPaddingRight">18dp</item>
    </style>


    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorLightBlue</item>
    </style>
</resources>
