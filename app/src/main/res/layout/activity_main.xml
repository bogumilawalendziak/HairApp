<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:id="@+id/drawerLayout"
        android:layout_gravity="start"
        tools:openDrawer="start"
>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@drawable/header_calendar"
        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="HOME"
                      android:textSize="20dp"
                      android:layout_gravity="bottom"
                      android:padding="30dp"
                      android:layout_marginBottom="5dp"
                      android:layout_marginLeft="10dp"
                      android:textColor="@color/colorAccentYellow"/>

        </LinearLayout>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/no_plan_text"
                  android:textSize="20sp"
                  android:gravity="center"
                  android:padding="20dp"
                  android:id="@+id/tv_layout_main_no_plan"
                  android:visibility="gone"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:id="@+id/layout_active_plan"
                      android:background="#FFFFFF">


            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="20dp"

            >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:id="@+id/layout_progress"
                        android:gravity="center"
                        android:background="#FFFFFF">
                    <include
                            layout="@layout/button_main_menu"
                            android:id="@+id/btn_menu_main1"
                            android:layout_gravity="start"
                            android:layout_height="100dp"
                            android:layout_width="100dp"
                            android:layout_weight="1"

                    />
                    <View android:layout_width="100dp"
                          android:layout_height="20dp"
                          android:padding="10dp"
                    />

                    <include
                            layout="@layout/button_main_menu"
                            android:id="@+id/btn_menu_main2"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:layout_width="100dp"
                    />
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="110dp"
                        android:id="@+id/layout_button_category">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KATEGORIA"
                            android:textSize="20sp"
                    />

                    <include layout="@layout/button_knowledge"
                             android:id="@+id/btn_knowledge1"
                    />

                    <include layout="@layout/button_knowledge"
                             android:id="@+id/btn_knowledge2"
                    />

                    <include layout="@layout/button_knowledge"
                             android:id="@+id/btn_knowledge3"
                    />

                    <include layout="@layout/button_knowledge"
                             android:id="@+id/btn_knowledge4"
                    />
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
            tools:override="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:headerLayout="@layout/nav_header"
            app:itemIconTint="@color/colorAccentYellow"
            app:itemTextColor="@color/colorAccentYellow"
            app:menu="@menu/menu_details"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            android:id="@+id/nav_view"
            android:backgroundTint="@color/colorBackground"
            app:itemIconSize="70dp"

    >


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>