<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBackground"
              android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:layout_marginTop="130dp"
            android:layout_width="378dp"
            android:layout_height="150dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/colorAccentYellow"
            android:layout_gravity="center">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
        >
            <TextView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Zobacz i zmień swoje dane o włosach"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:id="@+id/textView"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowColor="@color/colorTextIcon"
                    android:shadowRadius="5"/>
            <Button
                    android:layout_gravity="center"
                    android:text="Moje włosy"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_myHair"
                    android:backgroundTint="@color/colorBackground"
                    android:layout_marginTop="5dp"
            />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
            android:layout_marginTop="130dp"
            android:layout_width="378dp"
            android:layout_height="150dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/colorAccentYellow"
            android:layout_gravity="center">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
        android:gravity="center">
            <TextView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Zrób test"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:id="@+id/tv_test"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowColor="@color/colorTextIcon"
                    android:shadowRadius="5"/>
            <Button
                    android:text="test"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_test"
                    android:backgroundTint="@color/colorBackground"
                    android:layout_marginTop="5dp"
            />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>