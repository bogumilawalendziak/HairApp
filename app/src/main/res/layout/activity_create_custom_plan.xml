<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".customplan.CreateCustomPlan"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/header_calendar"
    >

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="25sp"
                  android:text="Stwóz własny plan"
                  android:textColor="@color/colorAccentYellow"
                  android:layout_gravity="bottom"
                  android:padding="28dp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/view_edit_task"
                      android:orientation="vertical">

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="20sp"
                      android:gravity="center"
                      android:hint="nazwa zadania"
                      android:textColorHint="@color/colorBackground"
                      android:id="@+id/tv_put_task"
            />
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/colorAccentYellow"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="10dp"
                    android:elevation="10dp">


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center"
                              android:layout_margin="5dp">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Dzień tygodnia"
                              android:textStyle="bold"
                              android:textSize="23sp"
                              android:layout_weight="1"
                              android:shadowRadius="2"/>
                    <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner1"
                            style="@style/spinnerItemStyle"
                            android:entries="@array/day_of_week"
                            android:layout_weight="1"
                    />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:layout_margin="10dp"
                    app:contentPadding="10dp"
                    app:cardBackgroundColor="@color/colorAccentYellow"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp"
            >
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center"
                              android:padding="5dp">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="23sp"
                              android:text="Rodzaj pielęgnacji"
                              android:layout_weight="1"
                              android:textStyle="bold"
                              android:shadowRadius="2"
                    />
                    <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner3"
                            android:entries="@array/PEH"
                            android:layout_weight="1"
                    />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="0dp"
                    android:text="DODAJ"
                    android:layout_gravity="center"
                    android:id="@+id/btn_add_custom_task"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/view_list_of_tasks"
                      android:orientation="vertical">
            <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:layout_margin="10dp"
                    app:contentPadding="10dp"
                    app:cardBackgroundColor="@color/colorAccentYellow"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp"
            >
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center"
                              android:padding="5dp">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="23sp"
                              android:text="Dodaj zadania do kalendarza"
                              android:layout_weight="1"
                              android:textStyle="bold"
                              android:shadowRadius="2"
                    />
                    <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="0dp"
                            android:text="DODAJ"
                            android:layout_gravity="center"
                            android:id="@+id/btn_show_create_custom_task"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <ExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/expandable_list"
                    android:padding="10dp"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>