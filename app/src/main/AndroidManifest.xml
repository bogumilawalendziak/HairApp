<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.haircare">

    <uses-permission
            android:name="android.permission.WRITE_EXTERNAL_STORAGE"
            android:maxSdkVersion="18"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_lupa"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_lupa_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".calendar.CareSchedule"
        android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".plans.HairCarePlan"
                  android:parentActivityName=".MainActivity">
        </activity>

        <provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="com.example.haircare.fileprovider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/file_paths"/>
        </provider>

        <meta-data
                android:name="com.google.mlkit.vision.DEPENDENCIES"
                android:value="ocr"/>

        <activity
                android:name=".scanner.Scanner"
                android:label="Scanner"
                android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".test.StartTestActivity"
                android:parentActivityName=".hairsettings.HairMenu">
        </activity>
        <activity
                android:name=".test.ResultActivity"
                android:parentActivityName=".MainActivity">
        </activity>
        <activity
                android:name=".hairsettings.HairMenu"
                android:parentActivityName=".MainActivity">
        </activity>
        <activity
                android:name=".test.QuestionActivity"
                android:parentActivityName=".test.StartTestActivity">
        </activity>
        <activity
                android:name=".hairsettings.PersonalSettingsActivity"
                android:parentActivityName=".hairsettings.HairMenu"
                android:theme="@style/AppTheme2">
        </activity>


        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>